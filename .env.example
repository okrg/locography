# Database Configuration
DATABASE_URL=sqlite+aiosqlite:///./locography.db

# LLM API Configuration (optional - for local LLM integration via LM Studio)
# LM Studio default URL with OpenAI-compatible API
LLM_API_URL=http://localhost:1234/v1
# Supported models: mistralai/magistral-small-2509, google/gemma-3-12b, qwen/qwen3-vl-30b
LLM_MODEL=mistralai/magistral-small-2509
LLM_API_KEY=lm-studio
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2000

# Application Settings
DEBUG=true
HOST=0.0.0.0
PORT=8000

# Upload Settings
MAX_UPLOAD_SIZE=10485760
UPLOAD_DIR=./uploads

# Location Services (optional)
ENABLE_LOCATION_TRACKING=false
